<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Reward Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-gray-800 text-white shadow-md">
        <div class="container mx-auto flex items-center justify-between p-4">
            <a href="#" class="text-2xl font-bold">MealMate Admin</a>
            <div class="hidden md:flex space-x-4">
                <a href="/admin/dashboard" class="hover:bg-gray-700 px-3 py-2 rounded">Dashboard</a>
                <a href="/admin/rewardOrders" class="hover:bg-gray-700 px-3 py-2 rounded">Reward Orders</a>
                <a href="/admin/logout" class="hover:bg-gray-700 px-3 py-2 rounded">Logout</a>
            </div>
            <button id="mobile-menu-button" class="md:hidden text-gray-200 hover:text-white focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
        <div id="mobile-menu" class="md:hidden bg-gray-700 hidden">
            <a href="/admin/dashboard" class="block px-4 py-2 text-white hover:bg-gray-600">Dashboard</a>
            <a href="/admin/rewardOrders" class="block px-4 py-2 text-white hover:bg-gray-600">Reward Orders</a>
            <a href="/admin/logout" class="block px-4 py-2 text-white hover:bg-gray-600">Logout</a>
        </div>
    </nav>
    <div class="container mx-auto p-8">
        <h1 class="text-2xl font-bold mb-4">Reward Orders</h1>

        <!-- Reward Orders Display -->
        <% if (rewardOrders && rewardOrders.length > 0) { %>
            <div class="space-y-6">
                <% rewardOrders.forEach(order => { %>
                    <div class="bg-white shadow-md rounded-lg p-4">
                        <h2 class="text-xl font-bold mb-2">Order ID: <%= order._id %></h2>
                        <p class="mb-2"><strong>User:</strong> <%= order.userId.username %> (<%= order.userId.email %>)</p>
                        <p class="mb-2"><strong>Order Date:</strong> <%= new Date(order.orderDate).toLocaleString() %></p>
                        <div class="space-y-4">
                            <div class="text-lg font-semibold">Items:</div>
                            <div class="space-y-2">
                                <% order.itemsOrder.forEach(item => { %>
                                    <div class="flex items-start space-x-4">
                                        <img src="<%= item.itemId.image %>" alt="<%= item.itemId.itemName %>" class="w-16 h-16 object-cover rounded-md">
                                        <div>
                                            <p class="text-lg font-medium"><%= item.itemId.itemName %></p>
                                            <p class="text-gray-600">Points Required: <%= item.itemId.pointsRequired %></p>
                                            <p class="text-gray-600">Quantity: <%= item.quantity %></p>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                        <div class="mt-4">
                            <p class="font-semibold">Total Points Required: <%= order.totalPointsRequired %></p>
                            <p class="font-semibold">Status: 
                                <% if (order.status === 'pending') { %>
                                    <span class="text-yellow-500">Pending</span>
                                <% } else if (order.status === 'completed') { %>
                                    <span class="text-green-500">Completed</span>
                                <% } else { %>
                                    <span class="text-red-500">Cancelled</span>
                                <% } %>
                            </p>
                        </div>
                        <div class="mt-4">
                            <form action="/updateStatusadmin/<%= order._id %>" method="POST">
                                <label for="status" class="block text-sm font-medium text-gray-700">Update Status:</label>
                                <select name="status" id="status" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                    <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="completed" <%= order.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                    <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                </select>
                                <button type="submit" class="mt-2 bg-blue-500 text-white px-4 py-2 rounded">Update Status</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-gray-700">No reward orders found.</p>
        <% } %>
    </div>
    <script>
        // Toggle mobile menu visibility
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            var menu = document.getElementById('mobile-menu');
            if (menu.classList.contains('hidden')) {
                menu.classList.remove('hidden');
            } else {
                menu.classList.add('hidden');
            }
        });
    </script>
</body>
</html>
