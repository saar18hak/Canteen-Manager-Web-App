<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-gray-800 text-white shadow-md">
        <div class="container mx-auto flex items-center justify-between p-4">
            <a href="#" class="text-2xl font-bold">MealMate</a>
            <div class="hidden md:flex space-x-4">
                <a href="/" class="hover:bg-gray-700 px-3 py-2 rounded">Home</a>
                <a href="/menu" class="hover:bg-gray-700 px-3 py-2 rounded">Menu</a>
                <a href="/userorders" class="hover:bg-gray-700 px-3 py-2 rounded">Orders</a>
                <a href="/updatebalance" class="hover:bg-gray-700 px-3 py-2 rounded">Update Balance</a>
                <a href="/profile" class="hover:bg-gray-700 px-3 py-2 rounded">Profile</a>
                <a href="/login" class="hover:bg-gray-700 px-3 py-2 rounded">Logout</a>
            </div>
            <button id="mobile-menu-button" class="md:hidden text-gray-200 hover:text-white focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
        <div id="mobile-menu" class="md:hidden bg-gray-700 hidden">
            <a href="/" class="block px-4 py-2 text-white hover:bg-gray-600">Home</a>
            <a href="/menu" class="block px-4 py-2 text-white hover:bg-gray-600">Menu</a>
            <a href="/orders" class="block px-4 py-2 text-white hover:bg-gray-600">Orders</a>
            <a href="/profile" class="block px-4 py-2 text-white hover:bg-gray-600">Profile</a>
            <a href="/logout" class="block px-4 py-2 text-white hover:bg-gray-600">Logout</a>
        </div>
    </nav>
    <div class="container mx-auto p-8">
        <h1 class="text-2xl font-bold mb-4">Welcome <%= user.username %></h1>
        <div class="flex justify-between">
            <h1 class="text-2xl font-bold mb-4">Menu</h1>
            <h1 class="text-2xl font-bold mb-4">Your balance: <%= user.balance %></h1>
        </div>
        <div class="mb-6" id="filter-buttons">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" onclick="filterItems('all')">All</button>
            <% categories.forEach(category => { %>
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" onclick="filterItems('<%= category %>')"><%= category %></button>
            <% }); %>
        </div>
        <form action="/order" method="post" onsubmit="return validateOrder()">
            <div id="items-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% items.forEach(val => { %>
                    <div class="item bg-white shadow-md rounded-lg overflow-hidden" data-category="<%= val.category %>">
                        <img class="w-full h-48 object-cover" src="<%= val.image %>" alt="Item image">
                        <div class="p-4">
                            <h2 class="text-xl font-semibold mb-2"><%= val.itemname %></h2>
                            <p class="text-gray-700 mb-2">Price: <%= val.price %></p>
                            <p class="text-sm mb-4" style="color: <%= val.available ? 'green' : 'red' %>">
                                Status: <%= val.available ? 'Available' : 'Not Available' %>
                            </p>
                            <div class="flex items-center mb-2">
                                <input class="mr-2" type="checkbox" id="menu_<%= val._id %>" name="menu_<%= val._id %>" value="<%= val._id %>">
                                <label for="menu_<%= val._id %>" class="text-gray-700">Select</label>
                            </div>
                            <div class="flex items-center mb-4">
                                <input class="border rounded w-full py-2 px-3 text-gray-700" type="number" name="quantity_<%= val._id %>" placeholder="Quantity">
                            </div>
                            <input type="hidden" name="price_<%= val._id %>" value="<%= val.price %>">
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="fixed bottom-8 right-8">
                <input class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-10 rounded shadow-md" type="submit" value="Order">
            </div>
        </form>
    </div>
    <script>
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            var menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        function filterItems(category) {
            const items = document.querySelectorAll('.item');
            items.forEach(item => {
                if (category === 'all' || item.getAttribute('data-category') === category) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        function validateOrder() {
            const userBalance = <%= user.balance %>;
            let totalPrice = 0;
            const items = document.querySelectorAll('input[type="checkbox"]:checked');
            items.forEach(item => {
                const menuId = item.value;
                const quantity = parseInt(document.querySelector(`input[name="quantity_${menuId}"]`).value);
                const price = parseFloat(document.querySelector(`input[name="price_${menuId}"]`).value);

                if (!isNaN(quantity) && quantity > 0) {
                    totalPrice += price * quantity;
                }
            });

            if (totalPrice > userBalance) {
                alert('Insufficient balance to place the order.');
                window.location.href = '/updatebalance'; 
                return false;
            }

            return true;
        }
    </script>
</body>
</html>
